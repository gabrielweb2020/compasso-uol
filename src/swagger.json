    "paths": {
        "/cidades": {
            "post": {
                "tags": ["Cities"],
                "summary": "Create City",
                "description": "Create a new city",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                            "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string"
                                    },
                                    "estado": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "nome": "Passo Fundo",
                                    "estado": "RS"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Error creating new city"
                    }
                }
            },
            "get": {
                "tags": ["Cities"],
                "summary": "List Cities",
                "description": "List All Cities",
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Error loading cities"
                    }
                }
            }
        }, 
